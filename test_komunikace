from rak811.rak811_v3 import Rak811
import time

lora = Rak811()

# Správný způsob, jak změnit port:
lora._serial.device = "/dev/ttyAMA0"
lora._serial.close()     # jistota, že je zavřeno
lora._serial.open()      # znovu otevře nový port

lora.hard_reset()
time.sleep(2)

lora.set_config('lora:work_mode:0')
print("Komunikace OK!")

lora.close()

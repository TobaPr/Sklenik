from rak811.rak811_v3 import Rak811
import time

lora = Rak811()

# Zavři port, pokud je otevřený
if lora._serial.serial_instance.is_open:
    lora._serial.serial_instance.close()

# Změň zařízení
lora._serial.device = "/dev/ttyAMA0"
lora._serial.serial_instance.port = "/dev/ttyAMA0"

# Otevři port
lora._serial.serial_instance.open()

# Reset a komunikace
lora.hard_reset()
time.sleep(2)

lora.set_config('lora:work_mode:0')
print("Komunikace OK!")

lora.close()

